{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "paths": {
      "@gbegher/*": ["./modules/*/src"]
    }
  }
}
